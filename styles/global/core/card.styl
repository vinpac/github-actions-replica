.card
  background: #ffffff
  border: 1px solid #d1d5da
  border-radius: $border-radius

.card-header
  background: rgba(#000, .04)
  box-shadow: 0 1px 1px rgba(#000, .2)
  border-radius: $border-radius $border-radius 0 0
  position relative
  z-index: 2

.card-item
  display: block
  border-top: 1px solid rgba(#000, .15)

  &.card-overflow,
  &.card-overflow-x,
  &:first-child
    border-top-width: 0

  &:first-child
    border-radius: $border-radius $border-radius 0 0

  &:last-child
    border-radius: 0 0 $border-radius $border-radius

table.card-item
  display: table

.card-overflow,
.card-overflow-x
  box-shadow: inset 0 0 0 1px rgba(#000, .12)

  + .card-item
    border-top-width: 0

.card-overflow
  padding: 1px
  margin: -1px

.card-overflow-x
  padding-left: 1px
  padding-right: 1px
  margin-left: -1px
  margin-right: -1px

.card-list
  border: 0

  .card-item
    border: 1px solid #dee0e3
    border-bottom-width: 0

    &&:first-child
      border-top-width: 1px

    &:last-child
      border-bottom-width: 1px

    &.active
      border-color: transparent

      + .card-item
        border-top-width: 0
